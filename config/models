Series
  modified UTCTime default=current_timestamp
  title Text
  creators Text Maybe
  sourceName Text Maybe
  sourceUrl Text Maybe
  -- pubStatus PubStatus
  -- readingStatus ReadingStatus
  issuesRead Int
  deriving Show
